    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eric.hello1.NotificationActivity">

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="77dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="67dp"
        android:id="@+id/buttonNotification" />

    <Button
        android:text="Button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonNotification"
        android:layout_alignLeft="@+id/buttonNotification"
        android:layout_alignStart="@+id/buttonNotification"
        android:layout_marginTop="33dp"
        android:id="@+id/buttonNotification1" />

    <Button
        android:text="ButtonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonNotification1"
        android:layout_alignLeft="@+id/buttonNotification1"
        android:layout_alignStart="@+id/buttonNotification1"
        android:layout_marginTop="43dp"
        android:id="@+id/buttonNotifycation3" />

    <Button
        android:text="Button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonNotifycation3"
