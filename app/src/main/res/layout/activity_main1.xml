<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lineraLayout1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editTextTel"
        android:hint="please input tel:" />

    <Button
        android:text="Disp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDisp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDisp" />
    <Button
        android:text="DispXml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="dispXml"
        android:id="@+id/buttonDispXml" />

    <Button
        android:text="DispInnerClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="dispXml"
        android:id="@+id/buttonDispInnerClass" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView" />
</LinearLayout>